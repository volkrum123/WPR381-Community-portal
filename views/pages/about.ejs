<%- include('../partials/header') %>

<section class="team">
  <h1>Meet the Team</h1>

  <div class="leader">
    <img src="<%= leader.image %>" alt="<%= leader.name %>" />
    <div>
      <h3><%= leader.name %></h3>
      <h4><%= leader.job %></h4>
      <h4>Role: <%= leader.role %></h4>
      <p><%= leader.bio %></p>
    </div>
  </div>

  <div class="team-members">
    <% team.forEach(member => { %>
    <div class="member">
      <img src="<%= member.image %>" alt="<%= member.name %>" />
      <h3><%= member.name %></h3>
      <h4><%= member.job %></h4>
      <h4>Role: <%= member.role %></h4>
      <p><%= member.bio %></p>
    </div>
    <% }) %>
  </div>
</section>

<%- include('../partials/footer') %>
